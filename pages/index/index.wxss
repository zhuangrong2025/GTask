/**index.wxss**/
page{
  background: #e7dfdf;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.start-cover{
  position: fixed;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  background-color: #f5f5f5;
}
.oprate{
  width: 100%;
}
.oprate button{
  float: left;
  font-size: 12px;
}
.oprate button:last-child{
  float: right
}